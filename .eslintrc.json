{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "require-jsdoc": 0,
        "operator-linebreak": 0,
        "import/prefer-default-export": 0,
        "consistent-return": 0,
        "camelcase": 0,
        "no-use-before-define": [
            0,
            {
                "functions": true,
                "classes": true
            }
        ],
        "no-shadow": 0,
        "no-param-reassign": [
            2,
            { "props": false }
        ],
        "no-underscore-dangle": [
            2,
            { "allowAfterThis": true },
            "error",
            { "allow": ["__filename", "__dirname"] }
        ],
        "no-console": 0,
        "import/extensions": 0,
        "arrow-parens": 0,
        "no-nested-ternary": 0,
        "linebreak-style": 0,
        "comma-dangle": 0,
        "indent": ["error", 4]
    }
}
